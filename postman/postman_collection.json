        {
          "name": "Create Zap - With Delayed Unlock",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/file.pdf"
                },
                {
                  "key": "type",
                  "value": "pdf",
                  "type": "text"
                },
                {
                  "key": "name",
                  "value": "Future Release Document",
                  "type": "text"
                },
                {
                  "key": "delayedAccessTime",
                  "value": "2026-02-28T00:00:00Z",
                  "type": "text",
                  "description": "Unlock date/time"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/zaps/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "zaps", "upload"]
            },
            "description": "Create a Zap with delayed unlock time"
          },
          "response": []
        },
        {
          "name": "Get Zap by Short ID (Public)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/zaps/{{public_short_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "zaps", "{{public_short_id}}"]
            },
            "description": "Get a public Zap by its short ID. Uses pdf-demo from seed data."
          },
          "response": []
        },
        {
          "name": "Get Zap by Short ID (Password Protected)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/zaps/{{protected_short_id}}?password={{test_password}}",
              "host": ["{{base_url}}"],
              "path": ["api", "zaps", "{{protected_short_id}}"],
              "query": [
                {
                  "key": "password",
                  "value": "{{test_password}}"
                }
              ]
            },
            "description": "Get a password-protected Zap. Uses secure-doc from seed data with password TestPass123!"
          },
          "response": []
        },
        {
          "name": "Get Zap by Short ID (Quiz Protected)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/zaps/{{quiz_short_id}}?quizAnswer={{quiz_answer}}",
              "host": ["{{base_url}}"],
              "path": ["api", "zaps", "{{quiz_short_id}}"],
              "query": [
                {
                  "key": "quizAnswer",
                  "value": "{{quiz_answer}}"
                }
              ]
            },
            "description": "Get a quiz-protected Zap. Uses quiz-file from seed data with answer 'paris'"
          },
          "response": []
        },
        {
          "name": "Get Zap Metadata",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/zaps/{{protected_short_id}}/metadata",
              "host": ["{{base_url}}"],
              "path": ["api", "zaps", "{{protected_short_id}}", "metadata"]
            },
            "description": "Get metadata about a Zap without accessing file content. Shows if it has password or quiz protection."
          },
          "response": []
        },
        {
          "name": "Verify Quiz Answer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"answer\": \"{{quiz_answer}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/zaps/{{quiz_short_id}}/verify-quiz",
              "host": ["{{base_url}}"],
              "path": ["api", "zaps", "{{quiz_short_id}}", "verify-quiz"]
            },
            "description": "Verify a quiz answer for a quiz-protected Zap"
          },
          "response": []
        },
        {
          "name": "Get URL Shortened Zap",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/zaps/{{url_short_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "zaps", "{{url_short_id}}"]
            },
            "description": "Get a URL shortener Zap. Uses url-short from seed data."
          },
          "response": []
        },
        {
          "name": "Get Text Content Zap",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/zaps/{{text_short_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "zaps", "{{text_short_id}}"]
            },
            "description": "Get a text content Zap. Uses text-note from seed data."
          },
          "response": []
        },
        {
          "name": "Get Delayed Unlock Zap (Should be locked)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/zaps/{{delayed_short_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "zaps", "{{delayed_short_id}}"]
            },
            "description": "Get a delayed unlock Zap. Should return 423 (Locked) if unlock time hasn't passed yet."
          },
          "response": []
        }
      ]
    }
  ],
