    {
      "name": "Zaps",
      "item": [
        {
          "name": "Create Zap - File Upload (PDF)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/sample.pdf",
                  "description": "PDF file to upload"
                },
                {
                  "key": "type",
                  "value": "pdf",
                  "type": "text"
                },
                {
                  "key": "name",
                  "value": "Sample PDF Document",
                  "type": "text"
                },
                {
                  "key": "viewLimit",
                  "value": "10",
                  "type": "text",
                  "disabled": true
                },
                {
                  "key": "expiresAt",
                  "value": "2026-03-28T00:00:00Z",
                  "type": "text",
                  "disabled": true
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/zaps/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "zaps", "upload"]
            },
            "description": "Upload a PDF file and create a new Zap"
          },
          "response": []
        },
        {
          "name": "Create Zap - File Upload (Image)",
          "request": {
