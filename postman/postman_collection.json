                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/zaps/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "zaps", "upload"]
            },
            "description": "Upload an image file"
          },
          "response": []
        },
        {
          "name": "Create Zap - Password Protected",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/document.docx"
                },
                {
                  "key": "type",
                  "value": "document",
                  "type": "text"
                },
                {
                  "key": "name",
                  "value": "Confidential Report",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "{{test_password}}",
                  "type": "text",
                  "description": "Password protection"
                },
                {
                  "key": "viewLimit",
                  "value": "10",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/zaps/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "zaps", "upload"]
            },
            "description": "Create a password-protected Zap. Uses password from environment variable."
          },
          "response": []
        },
        {
          "name": "Create Zap - Quiz Protected",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/file.pdf"
                },
                {
                  "key": "type",
                  "value": "pdf",
                  "type": "text"
                },
                {
                  "key": "name",
                  "value": "Quiz Protected Document",
                  "type": "text"
                },
                {
                  "key": "quizQuestion",
                  "value": "{{quiz_question}}",
                  "type": "text"
                },
                {
                  "key": "quizAnswer",
                  "value": "{{quiz_answer}}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/zaps/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "zaps", "upload"]
            },
            "description": "Create a quiz-protected Zap"
          },
          "response": []
        },
        {
