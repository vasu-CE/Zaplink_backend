
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  // directUrl         = env("DIRECT_URL")
  // relationMode      = "prisma"
}


enum ZapType {
  PDF
  IMAGE
  VIDEO
  AUDIO
  ZIP
  URL
  TEXT
  WORD
  PPT
  UNIVERSAL
}

model Zap {
  id               String   @id @default(cuid())
  shortId          String   @unique
  qrId             String   @unique
  type             ZapType  @map("qrType")
  name             String?     
  cloudUrl         String?     
  originalUrl      String?     
  passwordHash     String?     
  quizQuestion     String?
  quizAnswerHash   String?
  unlockAt         DateTime?
  viewLimit        Int?     @map("maxViews")
  viewCount        Int      @default(0)
  expiresAt        DateTime?   
  deletionToken    String   @unique
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

